{
  "name": "wbounce",
  "version": "1.0.0",
  "description": "wBounce by [Kevin Weber](http://kevinw.de)",
  "main": "_build-tools/index.js",
  "scripts": {
    "build:js:frontend": "uglifyjs frontend/js/*.js -o frontend/js/min/wbounce.min.js --compress --mangle",
    "watch:js:frontend": "nodemon -e js -w js/ -i frontend/js/min/ -x \"npm run build:js:frontend\"",
    "build:scss:frontend-base": "node-sass --sourcemap=none --style=compressed frontend/css/base.scss > frontend/css/min/wbounce-base.min.css",
    "build:scss:frontend": "node-sass --sourcemap=none --style=compressed frontend/css/all.scss > frontend/css/min/wbounce-all.min.css",
    "build:scss:admin": "node-sass --sourcemap=none --style=compressed admin/css/edit-page.scss > admin/css/min/edit-page.min.css",
    "watch:scss:frontend-base": "node-sass --sourcemap=none --style=compressed --watch frontend/css/base.scss > frontend/css/min/wbounce-base.min.css",
    "watch:scss:frontend": "node-sass --sourcemap=none --style=compressed --watch frontend/css/all.scss > frontend/css/min/wbounce-all.min.css",
    "watch:scss:admin": "node-sass --sourcemap=none --style=compressed --watch admin/css/edit-page.scss > admin/css/min/edit-page.min.css",
    "watch": "npm-run-all --parallel watch:**",
    "build": "npm-run-all build:**",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinweber/wbounce.git"
  },
  "keywords": [
    "newsletter",
    "exit",
    "popup",
    "exit",
    "popups",
    "roi",
    "conversion",
    "piwik",
    "google",
    "analytics",
    "rate",
    "optimisation",
    "free",
    "plugin",
    "wordpress",
    "marketing",
    "landing",
    "page"
  ],
  "author": "Kevin Weber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kevinweber/wbounce/issues"
  },
  "homepage": "https://github.com/kevinweber/wbounce#readme",
  "devDependencies": {
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^3.1.0",
    "uglify-js": "^2.7.3"
  }
}
